@model Category
@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row p-3 col-3">
        <h3>Update Category</h3>
    </div>
    <form method="post" class="form" style="width:50%" asp-controller="Category" asp-action="Delete">
        <div class="row">
            <label asp-for="Id" class="form-label"></label>
            <input asp-for="Id" class="form-control" type="text" readonly/>
        </div>
        <div class="row">
            <label asp-for="Name" class="form-label">Category name</label>
            <input asp-for="Name" class="form-control" type="text" readonly/>
        </div>
        <div class="row">
            <label asp-for="Displayname" class="form-label">Display name</label>
            <input asp-for="Displayname" class="form-control" type="text" readonly/>
        </div>
        <div>
            <button class="btn btn-danger m-3" type="submit">Delete</button>
            <a class="btn btn-light m-3" asp-action="Index">Back to list</a>
        </div>
    </form>
</div>
